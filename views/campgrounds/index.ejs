<% layout('layouts/boilerplate') %> 
<!--  
    all content below is passed as 'body' to boilerplate
    template in views/layouts/boilerplate.ejs
    - will render a page with the boilerplate as initial
      layout, with the content as this file inserted as 'body'
      in the boilerplate
-->

<link rel="stylesheet" href="/stylesheets/index.css">

<!-- header section -->
<div class="section">
    <h1 class="text-white">All campgrounds</h1>
    <p class="lead text-white text-center my-4">Welcome to C! <br> Jump right in and explore our many campgrounds. <br>
                Feel free to share some of your own and comment on others! </p>
    <a href="#showCampgrounds" class="btn btn-large btn-secondary fw-bold bg-white px-3" id="scroll">View all campgrounds</a> 
</div>

<!-- map section-->
<div class="row d-none d-md-block"> <!-- hide section on screens < medium -->
    <div class="buffer ">
        <div class="col-md-5">
            <h5 class="text-center">View all our campground locations</h5>
        </div>
        <div class="col-md-7">
            <div class="buffer">
                <div id="cluster-map" class="buffer"></div>
            </div>
        </div>
    </div>
</div>

<!-- all campgrounds -->
<div class="section section2" id="showCampgrounds">
    <div class="row card-group m-5">
        <% for(let campground of campgrounds) { %>
            <div class="col-md-4 d-flex justify-content-center">
                <div class="card rounded border-0" style="width:23rem">
                    <div class="card-img">
                        <% if(campground.images.length) {%>
                        <img class="img-fluid" src="<%= campground.images[0].url %>" alt=""> <!-- display first image in images array -->
                        <% } else { %>
                            <img class="img-fluid" src="https://res.cloudinary.com/dmhlzrw28/image/upload/v1675781304/YelpCamp/lk9ukogikiv2vapyfsml.jpg" alt=""> <!-- display default image -->
                        <% } %>
                    </div>
                    <div class="card-body text-center">
                        <h4 class="my-4 fw-bold"> <%= campground.title %> </h4>
                        <p class="card-text my-4"> <%= campground.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %></small>
                        </p>
                        <a class="btn text-white bg-dark py-2 px-5" href="/campgrounds/<%= campground._id %>">View <%= campground.title %> </a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- use ejs to create javascript variable mapToken that we can access in our js (clusterMap) -->
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>} // mapbox expect data in an array under the key 'features'
</script>

<!-- include js for the clusterMap -->
<script src="/javascripts/clusterMap.js"></script>