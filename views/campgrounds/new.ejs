<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/stylesheets/new.css">

<div class="row">
    <!-- <div class="col-md-6  mt-3 mb-5">  center it --> 
    <div class="main col-md-6 mx-auto m-5 p-3"> 
        <h2 class="text-center m-4">New Campground</h2>
        <!-- send a POST req to /campgrounds = submit form to /campgrounds -->
        <form action="/campgrounds" method="POST" novalidate class="validated-form p-4" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control form-control-sm" type="text" id="title" name="campground[title]" required> 
                <!-- automaticlly makes the field green + mesage when client is typing = from becomes valid-->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- Location -->
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control form-control-sm" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- Price  -->
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input id="price" type="text" class="form-control form-control-sm" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>    
            </div>          
            <!-- Description -->
            <div class="mb-3">
                <label class="form-label" for="description">Description Url</label>
                <textarea class="form-control form-control-sm" type="text" id="description" name="campground[description]"></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- Image file upload -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload image(s)</label>
                <input class="form-control form-control-sm" type="file" id="image" name="image" multiple>
            </div>
            <!-- Add button -->
            <div class="mt-4">
                <button class="btn bg-dark text-white">Add campground</button>
                <a class="btn btn-outline-secondary" href="/campgrounds">All campgrounds</a>
            </div>

        </form>
    </div>
</div>


<!-- 
    Ex: campground[title]
    When data is sent via POST to the server, eveything
    in req.body is stored under campground 
-->
  

