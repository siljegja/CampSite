<% layout('layouts/boilerplate') %> 
<!-- content below will be inserted where 'body' is placed
     in boilerplate.ejs -->

<div class="container d-flex justify-content-center align-items-center mb-5">
    <div class="row flex-fill">
        <!-- medium+ = centered in the middle/50%. XL = 1/3. Small = full width -->
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4"> 
            <div class="card shadow my-3">
                <img src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" 
                    alt="" class="card-img-top">
                <div class="card-body">
                    <h4 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus> 
                            <!-- automaticlly makes the field green + message when client is typing = form becomes valid-->
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required> 
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



